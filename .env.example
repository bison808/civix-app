# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CIVIX

# API Service URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3003
NEXT_PUBLIC_AI_ENGINE_URL=http://localhost:3002
NEXT_PUBLIC_DATA_PIPELINE_URL=http://localhost:3001
NEXT_PUBLIC_COMMUNICATIONS_URL=http://localhost:3005

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3005

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REALTIME_UPDATES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# External APIs (optional - add your own keys)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=

# Geocodio API Configuration
# Sign up at https://geocod.io to get your API key
NEXT_PUBLIC_GEOCODIO_API_KEY=

# Congress API Configuration
NEXT_PUBLIC_CONGRESS_API_KEY=
NEXT_PUBLIC_CONGRESS_API_BASE_URL=https://api.congress.gov/v3

# OpenStates API Configuration
NEXT_PUBLIC_OPENSTATES_API_KEY=
NEXT_PUBLIC_OPENSTATES_API_BASE_URL=https://v3.openstates.org

# Google Civic Information API
NEXT_PUBLIC_CIVIC_INFO_API_KEY=

# ZIP Code & District Mapping
NEXT_PUBLIC_ENABLE_GEOCODING=true
NEXT_PUBLIC_ENABLE_BATCH_PROCESSING=true
NEXT_PUBLIC_USE_REAL_DATA=true

# Cache Configuration
NEXT_PUBLIC_CACHE_EXPIRATION_HOURS=24
NEXT_PUBLIC_MAX_CACHE_SIZE=1000

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT_REQUESTS=1000
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW_HOURS=24

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Development
NODE_ENV=development
PORT=3000